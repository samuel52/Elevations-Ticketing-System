<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
  <div class="form-group form-group-lg">
    <%= form_tag lifepointes_path, :method => "get", :class => 'form-group' do %>
    <%= text_field_tag :search, params[:search], :class => 'form-control' %>
   
  <% end %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>N/O</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Registered Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @lifepointes.each do |lifepointe| %>
        <tr>
          <td><%= lifepointe.id %></td>
          <td><%= lifepointe.fname %></td>
          <td><%= lifepointe.lname %></td>
          <td><%= lifepointe.email %></td>
          <td><%= lifepointe.phone %></td>
          <td><%= lifepointe.created_at %></td>
          <td><%= link_to 'Show', lifepointe %></td>
          <td><%= link_to 'Edit', edit_lifepointe_path(lifepointe) %></td>
          <td><%= link_to 'Delete', lifepointe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1>Register To Attend</h1>
  <%= render 'form', lifepointe: @lifepointe %>
<% end -%>
